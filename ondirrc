enter ~/work/bluepex/(utm|utm_versions_packs)
   export GIT_AUTHOR_NAME='Wesley Peres'
   export GIT_AUTHOR_EMAIL='wesley.peres@bluepex.com'
   export GIT_COMMITTER_NAME='Wesley Peres'
   export GIT_COMMITTER_EMAIL='wesley.peres@bluepex.com'
   echo 'Switched to git user/email settings for "work".'

leave ~/work/bluepex/(utm|utm_versions_packs)
   unset GIT_AUTHOR_NAME
   unset GIT_AUTHOR_EMAIL
   unset GIT_COMMITTER_NAME
   unset GIT_COMMITTER_EMAIL
   echo 'Switched back to global git user/email settings.'
